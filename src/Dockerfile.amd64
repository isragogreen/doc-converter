# syntax=docker/dockerfile:1
FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3.10 \
    python3-pip \
    git \
    curl \
    build-essential \
    libgl1-mesa-glx \
    libglib2.0-0 \
    libjpeg-turbo8 \
    libpng16-16 \
    && rm -rf /var/lib/apt/lists/*

RUN pip3 install --no-cache-dir --upgrade pip uv
RUN pip install -U torch --index-url https://download.pytorch.org/whl/cpu
RUN pip install -U gitpython psutil shutil ollama

RUN curl -fsSL https://ollama.com/install.sh | sh

WORKDIR /app
COPY src/script.py .

RUN git config --global user.name "Doc Converter" && git config --global user.email "converter@example.com"

CMD ["python3", "script.py"]