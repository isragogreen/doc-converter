# syntax=docker/dockerfile:1
FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive

# Базовые пакеты (одним слоем)
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3.10 \
    python3-pip \
    git \
    curl \
    build-essential \
    libgl1-mesa-glx \
    libglib2.0-0 \
    libjpeg-turbo8 \
    libpng16-16 \
    && rm -rf /var/lib/apt/lists/*

# Обновление pip
RUN pip3 install --no-cache-dir --upgrade pip

# Torch отдельно (большой, чтобы кэшировать)
RUN pip3 install --no-cache-dir \
    torch==2.3.0+cpu \
    torchvision==0.18.0+cpu \
    --index-url https://download.pytorch.org/whl/cpu

# Базовые зависимости (gitpython, psutil, ollama)
RUN pip3 install --no-cache-dir \
    gitpython \
    psutil \
    ollama

# Ollama binary (быстро)
RUN curl -L https://github.com/ollama/ollama/releases/download/v0.3.14/ollama-linux-amd64 \
    -o /usr/local/bin/ollama && \
    chmod +x /usr/local/bin/ollama

# Очистка
RUN pip3 cache purge && \
    apt-get clean && \
    rm -rf /tmp/* /var/tmp/* /var/lib/apt/lists/*

WORKDIR /app
COPY src/script.py .

# Git config
RUN git config --global user.name "Doc Converter" && \
    git config --global user.email "converter@example.com"

CMD ["python3", "script.py"]